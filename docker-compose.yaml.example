version: '3.8'

services:
  npm:
    build:
      context: ./docker/nginx-pm
      dockerfile: Dockerfile
    restart: unless-stopped
    ports:
        - 80:80    
        - 81:81
        - 443:443
    volumes:
        - ./docker/nginx-pm/data:/data
        - ./docker/nginx-pm/letsencrypt:/etc/letsencrypt
    environment:
        - DB_MYSQL_HOSTR=db
        - DB_MYSQL_PORT=3306
        - DB_MYSQL_USER=npmm
        - DB_MYSQL_PASSWORD=npm
        - DB_MYSQL_NAME=n-pm
        # - DISABLE_IPV6=true
    depends_on:
        - db


  db:
    build:
      context: ./docker/mariadb
      dockerfile: Dockerfile
    restart: unless-stopped
    volumes:
        - ./docker/mariadb/mysql:/var/lib/mysql
    environment:
        - MYSQL_ROOT_PASSWORD=npm
        - MYSQL_DATABASE=npm
        - MYSQL_USER=npm
        - MYSQL_PASSWORD=npm

